{
    "name": "Rust DevContainer",
    "build": {
        "dockerfile": "Dockerfile"
    },
    "runArgs": [
        "--user",
        "${localEnv:UID}:${localEnv:GID}"
    ],
//   "postCreateCommand": "sudo chown -R ${localEnv:UID}:${localEnv:GID} /home/vscode", // Optional: if you need to change ownership
    "settings": {
        "terminal.integrated.defaultProfile.linux": "/bin/bash"
    },
    "extensions": [
        "rust-lang.rust-analyzer",
        "vadimcn.vscode-lldb",
        "mutantdino.resourcemonitor"
    ],
    "forwardPorts": [3000],
    "postCreateCommand": "rustup update"
}